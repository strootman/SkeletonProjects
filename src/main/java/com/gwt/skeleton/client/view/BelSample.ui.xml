<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
            xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.important {
			font-weight: bold;
		}
		.top {
			position: absolute;
			border-width: 0px;
      		left: 0px;
      		right: 0px;
   			top: 0px;
   			background-image: url('images/headerlogo-fill.png');
   			border-width: 0px;
   			margin: 0;
   			padding: 0;
	    }
	    .bottom {
			overflow: visible;
			position: absolute;
            background-color: rgb(254, 253, 221);
            left: 0px;
            height: 20px;
            bottom: 0;
		}
		.middle{
			left: 0px;
			right: 0px;
			position: absolute;
			bottom: 20px;
			top: 143px;
			background-color: lime;
		}
		.iplantc_logo {
			cursor: pointer;
			background-image: url('images/headerlogo.png');
			width: 500px;
		    height: 140px; 
		}
		.iplantc_header_actions{
			position: fixed;
			top: 15px;
			right: 40px;

		}
	</ui:style>
	<g:HTMLPanel height="100%">
	<div class="{style.top}">
		<table>
			<tbody>
				<tr>
					<td role="presentation" align="LEFT" valign="TOP"><div class="{style.iplantc_logo}"></div></td>
					<td role="presentation" align="LEFT" valign="TOP"><div class="{style.iplantc_header_actions}">Menu</div></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="{style.bottom}">It's the bottom</div>
	<div class="{style.middle}">
		Hello,
		<span class="{style.important}" ui:field="nameSpan" />
	</div>
	</g:HTMLPanel>
</ui:UiBinder>